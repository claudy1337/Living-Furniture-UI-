<Page x:Class="The_Living_Furniture_UI.Pages.userPages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.userPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Profile">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Margin="10">
                <Image Source="/Assets/Images/account.png"/>
            </StackPanel>
            <StackPanel Grid.Row="0">
                <Grid Height="280">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" >
                        <material:Card Width="331" material:ShadowAssist.ShadowDepth="Depth5" Height="275">
                            <StackPanel HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel Orientation="Vertical">
                                        <Image Source="/Assets/Images/user.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="150" Width="150"/>
                                        <Button Content="Except ->"
                                     Margin="0,10,10,0"
                                     Foreground="White"
                                     FontSize="19"
                                     FontWeight="Medium">

                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#EB8F4C"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="FontFamily" Value="Poppins Medium"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E2A06F"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>


                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Width="150" Height="45"
                                    CornerRadius="15"
                                    Background="{TemplateBinding Background}">
                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Login" FontSize="32" FontFamily="Ubuntu Medium"/>
                                        <TextBlock Text="Login" FontSize="32" FontFamily="Ubuntu Medium" Margin="0,10,0,0"/>
                                        <TextBlock Text="Login" FontSize="32" FontFamily="Ubuntu Medium" Margin="0,10,0,0"/>

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </material:Card>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <material:Card Width="331" material:ShadowAssist.ShadowDepth="Depth5" Height="275">
                            <StackPanel Orientation="Horizontal">
                                <Expander ExpandDirection="Left">
                                    <Expander.Header>
                                        <TextBlock Text="User Card"
                                         FontSize="22"
                                         FontFamily="Ubuntu Medium"
                                        RenderTransformOrigin=".5,.5">
                                            <TextBlock.LayoutTransform>
                                                <RotateTransform Angle="90" />
                                            </TextBlock.LayoutTransform>
                                        </TextBlock>
                                    </Expander.Header>
                                    <StackPanel Orientation="Vertical" TextBlock.Foreground="{DynamicResource MaterialDesignBody}" Margin="8,24,16,24">
                                        <TextBlock Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua " TextWrapping="Wrap" FontSize="15" />
                                        <TextBlock/>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </material:Card>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
