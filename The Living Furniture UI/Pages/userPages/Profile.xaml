<Page x:Class="The_Living_Furniture_UI.Pages.userPages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.userPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="37*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <Image Source="/Assets/Images/account.png" />

            </StackPanel>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,10,0,0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Name"/>
                        <TextBox
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="7"/>
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="Width" Value="200"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Label Content="Contacts"/>
                        <TextBox
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="7"/>
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="Width" Value="200"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Label Content="Address"/>
                        <TextBox
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="7"/>
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="Width" Value="200"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        
                        
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,20,0,0">
                        <Rectangle Width="150" Height="150">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Assets/Images/user.png"/>

                            </Rectangle.Fill>
                        </Rectangle>
                        <Button Content="Create in an account"
                        Margin="0,30,0,0"
                        Foreground="White"
                        FontSize="19"
                        FontWeight="Medium">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#388F72"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="FontFamily" Value="Ubuntu Medium"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3D7462"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>


                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="300" Height="45"
                                    CornerRadius="13"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
