<Page x:Class="The_Living_Furniture_UI.Pages.userPages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.userPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="28*"/>
                <RowDefinition Height="17*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <Image Source="/Assets/Images/account.png" />

            </StackPanel>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="31*"/>
                        <ColumnDefinition Width="49*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="268">
                        <Label Content="Name"/>
                        <TextBox
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Height="45" Width="250"/>
                        <Label Content="Contacts"/>
                        <TextBox
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Height="45" Width="250" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                        <TextBox
                                Margin="0,20,0,0"
                     Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Height="45" Width="250" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>


                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="-10,20,0,0">
                            <TextBox Margin="20,0,0,0" Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Height="45" Width="100" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                            <TextBox Margin="20,0,0,0" Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Height="45" Width="100" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Height="246" Width="300">
                        <Rectangle Width="145" Height="150">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="/Assets/Images/user.png"/>

                            </Rectangle.Fill>
                        </Rectangle>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
                            <TextBox Margin="20,0,0,0" Padding="7"
                     FontSize="25" HorizontalAlignment="Left"
                     FontFamily="Ubuntu Light" Height="45" Width="150" Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
