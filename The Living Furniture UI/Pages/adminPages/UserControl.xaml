<Page x:Class="The_Living_Furniture_UI.Pages.adminPages.UserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.adminPages"
      mc:Ignorable="d" 
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserControl">
    <Border CornerRadius="10" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1">
                <Button Height="50"/>
            </StackPanel>
            <StackPanel Grid.Row="0">
                <ListView>
                    <ListViewItem>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Images/mainC.png" Height="90"/>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Name"/>
                            </StackPanel>
                        </StackPanel>
                        
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Border>
            
</Page>
