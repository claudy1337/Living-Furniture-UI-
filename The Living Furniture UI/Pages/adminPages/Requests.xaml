<Page x:Class="The_Living_Furniture_UI.Pages.adminPages.Requests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.adminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Requests"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:domain="clr-namespace:The_Living_Furniture_UI.Pages.adminPages.Domain">

    <Border CornerRadius="10" Background="#FFF7EE">
        <ListBox
                IsEnabled="{Binding IsChecked, ElementName=EnableListBox}">
            <TextBlock>
                <StackPanel Orientation="Horizontal">
                     <CheckBox Height="50"/>
                    <StackPanel Orientation="Vertical">
                        <Label Content="Name" Margin="0,5,0,0" FontSize="15" FontFamily="Ubuntu Medium" HorizontalAlignment="Center"/>
                        <Label Content="Name" Margin="0,-5,0,0" FontSize="10" FontFamily="Ubuntu Light" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                </StackPanel>
               
                
            </TextBlock>
            
        </ListBox>
    </Border>
</Page>
