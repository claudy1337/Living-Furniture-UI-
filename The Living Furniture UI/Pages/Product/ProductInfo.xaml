<Page x:Class="The_Living_Furniture_UI.Pages.Product.ProductInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:The_Living_Furniture_UI.Pages.Product"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductInfo">
    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Information Product" FontSize="22" FontFamily="Ubuntu Medium"/>
                <TextBlock Margin="0,10,0,0" FontFamily="Ubuntu Light" FontSize="18" TextWrapping="WrapWithOverflow" Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also  including versions of Lorem Ipsum." Width="200"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0">
                            <Ellipse Height="40" Width="40" Fill="Black"/>
                            <Ellipse Height="40" Width="40" Fill="Black"/>
                            <Ellipse Height="40" Width="40" Fill="Black"/>
                            <Ellipse Height="40" Width="40" Fill="Black"/>
                        </StackPanel>
                        <Image Source="/Assets/Images/Furniture/Collection/Cabinet.png" Height="200" Margin="0,15,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,20,0,0">
                        <Image Source="/Assets/Images/MainL.png" Height="200" Margin="0,-10,20,0"/>
                        <Image Source="/Assets/Images/mainC.png" Height="200" Margin="20,20,0,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                        <TextBlock Text="Configuration:" FontSize="22" FontFamily="Ubuntu Medium"/>
                        <ComboBox Height="45"/>
                        <ComboBox Height="45" Margin="0,20,0,0"/>
                        <ComboBox Height="45" Margin="0,20,0,0"/>
                        <ComboBox Height="45" Margin="0,20,0,0"/>
                        <CheckBox Content="dassd" FontSize="15"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Bottom">
                        <TextBlock Text="Price:1000" FontFamily="Ubuntu Medium" FontSize="22"/>
                        <Button Content="dsdsds"  FontFamily="Ubuntu Medium" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#F6B50E"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="FontFamily" Value="Poppins Medium"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F9D475"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>


                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="190" Height="39"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</Page>
        